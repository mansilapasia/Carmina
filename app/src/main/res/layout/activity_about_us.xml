<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meetishah.carmina.AboutUs">

    <TextView
        android:id="@+id/aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="About Us"
        android:textSize="25dp" />

    <TextView

        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/aboutus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Carmina is a music playing mobile application supported by Android operating system. It is a one-stop destination to stream Hindi and English songs. Carmina’s sole purpose is to let the users to listen to music and subdue their tension."
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="27dp"
        android:text="Contact Us at: "
        android:fontFamily="sans-serif-condensed"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="55dp"
        android:id="@+id/emailtext"
        android:text="carminamsic123@gmail.com "
        android:fontFamily="sans-serif-condensed"
        android:textSize="22dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"

        android:layout_marginBottom="0dp"
        android:background="@color/black">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif-monospace"
            android:text="Carmina ©"
            android:textColor="@color/white"
            android:textSize="25dp"/>

    </LinearLayout>

</RelativeLayout>

